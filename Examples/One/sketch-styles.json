{
    "__Buttons": "----------------------------------------------------",
    "@btn-submit-text":{
        "description":           "Common text styles for all submit buttons",
        "font-size":             "12.0",
        "font-weight":           "bold",
        "text-transform":        "uppercase",
        "sketch": [
                                "Styles/Controls/Buttons/Submit/Ok/Text",
                                "Styles/Controls/Buttons/Submit/Cancel/Text"
        ]
    },
    "@btn-submit-ok-text":{
        "text-color":            "#ffffff",
        "sketch":                "Styles/Controls/Buttons/Submit/Ok/Text"
    },
    "@btn-submit-cancel-text":{
        "text-color":            "@color-secondary",
        "sketch":                "Styles/Controls/Buttons/Submit/Cancel/Text"
    },
    "@btn-submit-ok-back":{
        "fill-color" :           "@color-primary",
        "border-color":          "",
        "border-width":          "",
        "shadow":                "0 10px 20px 2 #00000033",
        "shape-radius":         "@radius-medium",       
        "sketch":                "Styles/Controls/Buttons/Submit/Ok/Back" 
    },
    "@btn-submit-cancel-back":{
        "fill-color" :           "@color-secondary",
        "fill-color-opacity":    "0.0",
        "border-color":          "@color-secondary",
        "border-width":          "2",
        "shape-radius":         "@radius-medium",       
        "sketch":                "Styles/Controls/Buttons/Submit/Cancel/Back" 
    },
    "@btn-submit-disabled-text":{
        "text-color":            "#FFFFFF",
        "text-color-opacity":    "63%",
        "sketch":                "Styles/Controls/Buttons/Submit/Disabled/Text"
    },
    "@btn-submit-disabled-back":{
        "fill-color":            "#B0AFB1",
        "fill-color-opacity":    "63%",
        "shape-radius":         "@radius-medium",       
        "sketch":                "Styles/Controls/Buttons/Submit/Disabled/Back"
    },

    "__END": "----------------------------------------------------"
}